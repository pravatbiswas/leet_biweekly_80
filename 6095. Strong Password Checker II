class Solution:
    def strongPasswordCheckerII(self, password: str) -> bool:
        lower_case = 0
        upper_case = 0
        digit = 0
        special_char = 0
        if len(password) < 8:
            return False
        prev = ''
        for c in password:
            if prev == c:
                return False
            prev = c
            if c in "!@#$%^&*()-+":
                special_char = 1
            if c.isdigit():
                digit = 1
            if c.islower():
                lower_case = 1
            if c.isupper():
                upper_case = 1
            
        if special_char == 1 and digit == 1 and lower_case == 1 and upper_case == 1:
            return True
        else:
            return False
        
